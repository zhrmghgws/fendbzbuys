    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_outside_down_dialog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
   <RelativeLayout
       android:layout_width="0dp"
       android:layout_weight="2"
       android:layout_height="match_parent"
       android:layout_marginTop="50dp"
       android:background="@drawable/yuanjiao_button_download_shouye_dialog"
       >
       <TextView
           android:id="@+id/tv_down"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="批量管理"
            android:layout_centerHorizontal="true"
           android:layout_marginTop="15dp"
           android:textSize="16dp"
           android:textColor="@color/black"
           />
       <TextView
           android:id="@+id/tv2_down"
           android:layout_below="@+id/tv_down"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="下载之后可以离线阅读了"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dp"
           android:textSize="13dp"
           android:textColor="@color/color_666666"
           />
       <ListView
           android:id="@+id/lv_down"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv2_down"
           android:layout_marginLeft="15dp"
           android:divider="@color/color_999999"
           android:dividerHeight="1dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="20dp"
           >
       </ListView>
