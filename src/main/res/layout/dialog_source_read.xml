<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_outside_source_read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_change_source_read"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_conten_read_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_button_contentwhite_right">

            <RelativeLayout
                android:id="@+id/ll_title_mulu_read"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="选择书源"
                    android:textColor="@color/color_999999"
                    android:textSize="20dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hint_source_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title_mulu_read"
                android:layout_centerInParent="true"
                android:text="切换书源后,离线阅读需要重新缓存"
                android:textColor="@color/color_999999"
                android:textSize="13dp" />

            <ListView
                android:id="@+id/ls_source_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hint_source_read"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                ></ListView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_outside_source_read"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_conten_read_source"
            ></RelativeLayout>
    </RelativeLayout>


</LinearLayout>