<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/shujia_bj14"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_actionbar_shumulu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mytitlebar"
        >
        <ImageView
            android:id="@+id/iv_back_shumulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhui_jiantou_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_back_shumulu"
            android:layout_toRightOf="@+id/iv_back_shumulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_title_shumulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目录"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_daoxu_mulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒序"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="16dp"
            android:textColor="@color/hometextcolor_hover_light"
            />
    </RelativeLayout>
    <ListView
        android:layout_below="@+id/rl_actionbar_shumulu"
        android:layout_marginTop="10dp"
        android:divider="@color/color_eeeeee"
        android:dividerHeight="1dp"
        android:id="@+id/lv_mulu_shumulu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</RelativeLayout>